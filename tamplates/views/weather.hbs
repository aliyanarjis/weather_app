<!DOCTYPE html>
<html lang="en">
<head>
  {{>headerlink}}
</head>
<body>
    {{>navbar}}

    <!-- mian header -->
    <div class="container-fluid main-header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto ">
               <div class="main-container">
                    <form class="temp-form">
                        <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="off" />
                        <input type="submit" value="search" id="submitBtn" />
                    </form>

               </div>
               <div class="tempInformation">
                 <div class="top-layer">
                    <p id="day">tuesday</p>
                    <p id="today-data">13 oct</p>
                 </div>
                 <div class="main-layer">
                    <p id="city_name">Get Output Here</p>
                    <div class="middle-layer ">
                        <p id="temp"><span id="temp_c">0</span><sup>o</sup>C</p>
                        <p id="temp-status"><i class="fa-solid fa-cloud"></i></p>
                    </div>
                 </div>
               </div>
               
            </div>
        </div>
    </div>
    <!-- footer -->
    {{>footer}}
    <script src="js/main.js"></script>
    

</body>
</html>